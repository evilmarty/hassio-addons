{
  "name": "Navidrome",
  "version": "latest",
  "slug": "navidrome",
  "description": "Navidrome is a self-hosted, open source music server and streamer. It gives you freedom to listen to your music collection from any browser or mobile device.",
  "url": "https://github.com/evilmarty/hassio-addons/tree/master/navidrome",
  "image": "deluan/navidrome",
  "arch": ["amd64", "aarch64", "armhf"],
  "startup": "application",
  "init": false,
  "boot": "auto",
  "services": [],
  "webui": "http://[HOST]:[PORT:4533]",
  "panel_icon": "mdi:selection-ellipse",
  "ports": {
    "4533/tcp": 4533
  },
  "ports_description": {
    "4533/tcp": "The port for the Navidrome webinterface"
  },
  "map": ["share:rw", "ssl:ro"],
  "environment": {
    "ND_CONFIGFILE": "/data/options.json",
    "ND_DATAFOLDER": "/data",
    "ND_MUSICFOLDER": "/share/music"
  },
  "options": {
    "musicfolder": "/share/music",
    "scaninterval": "1m",
    "loglevel": "info",
    "address": "0.0.0.0",
    "port": "4533",
    "enabletranscodingconfig": false,
    "transcodingcachesize": "100Mb",
    "imagecachesize": "100Mb",
    "autoimportplaylists": true,
    "baseurl": "",
    "uiloginbackgroundurl": "",
    "uiwelcomemessage": "",
    "gatrackingid": "",
    "ignoredarticles": "",
    "searchfullstring": false,
    "coverartpriority": "",
    "coverjpegquality": 75,
    "enabledownloads": true,
    "sessiontimeout": "24h",
    "authrequestlimit": 5,
    "authwindowlength": "20s",
    "enablegravatar": true
  },
  "schema": {
    "musicfolder": "str",
    "scaninterval": "match([1-9][0-9]*[HMShms])",
    "loglevel": "str",
    "address": "str",
    "port": "port",
    "enabletranscodingconfig": "bool?",
    "transcodingcachesize": "match([1-9][0-9]*[GMKgmk]?[Bb])",
    "imagecachesize": "match([1-9][0-9]*[GMKgmk]?[Bb])",
    "autoimportplaylists": "bool?",
    "baseurl": "str?",
    "uiloginbackgroundurl": "str?",
    "uiwelcomemessage": "str?",
    "gatrackingid": "str?",
    "ignoredarticles": "str?",
    "searchfullstring": "bool?",
    "coverartpriority": "str?",
    "coverjpegquality": "int(1,100)",
    "enabledownloads": "bool",
    "sessiontimeout": "match([1-9][0-9]*[HMShms])",
    "authrequestlimit": "int(0,)",
    "authwindowlength": "match([1-9][0-9]*[HMShms])",
    "enablegravatar": "bool"
  }
}
